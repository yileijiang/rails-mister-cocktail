<h2><%= @cocktail.name %></h2>

<p>
  <% @cocktail.doses.each do |dose| %>
   <li>
     <%= dose.description %>
     <%= dose.ingredient.name %>
     <button><%= link_to "Delete", dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } %></button>
   </li>
  <% end %>
</p>


<p><%= link_to "Add Ingredient", new_cocktail_dose_path(@cocktail) %></p>

<p><%= link_to "Back", cocktails_path %></p>

